<?xml version='1.0' encoding='utf-8'?>
<widget id="br.com.notificacao.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Controle</name>
    <description>
        Aplicação para controle de estoque e clientes.
    </description>
    <author email="support@phonegap.com" href="http://phonegap.com">
        Maria Júlia
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon src="www/img/logo.png" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#ee6e73" />
    <preference name="StatusBarStyle" value="blacktranslucent" />
    <preference name="SplashScreen" value="screen.gif" />
    <preference name="SplashScreenDelay" value="10000" />
    <preference name="SplashScreenBackgroundColor" value="white" />
</widget>
